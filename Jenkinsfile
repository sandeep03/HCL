    stage("build") {
    
      steps {
        node ('master'){
                echo 'build application'
            }      
      }
    
    }
    
    stage("test") {
    
      steps {
        node ('master'){
                echo 'build application'
            }      
      }
    
    }
    stage("deploy") {
    
      steps {
        node ('master'){
                echo 'build application'
            }      
      }
    
    }
  }

}
